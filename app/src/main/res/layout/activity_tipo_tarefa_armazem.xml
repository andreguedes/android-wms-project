<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_tipo_tarefa_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_padding_large"
        android:layout_marginLeft="@dimen/text_padding_large"
        android:layout_marginTop="@dimen/text_padding_extra_large"
        android:layout_marginEnd="@dimen/text_padding_large"
        android:layout_marginRight="@dimen/text_padding_large"
        android:gravity="center"
        android:text="@string/act_tipo_tarefa_armazem_description"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tipos_tarefa_armazem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipo_tarefa_description"
        app:spanCount="2"
        tools:itemCount="6"
        tools:listitem="@layout/item_tipo_tarefa_armazem" />

</androidx.constraintlayout.widget.ConstraintLayout>
